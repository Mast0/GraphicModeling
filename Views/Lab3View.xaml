<UserControl x:Class="GraphicModelling.Views.Lab3View"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:converters="clr-namespace:GraphicModelling.Converters"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">
    <UserControl.Resources>
        <converters:CenterConverter x:Key="CenterConverter"/>
    </UserControl.Resources>
    
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="2*"/>
            <ColumnDefinition Width="1*"/>
        </Grid.ColumnDefinitions>

        <Border Grid.Column="0" BorderBrush="Gray" BorderThickness="1" Margin="10">
            <Canvas x:Name="Grapich" ClipToBounds="True" Background="White"
                    MouseLeftButtonDown="Grapich_MouseLeftButtonDown"
                    MouseLeftButtonUp="Grapich_MouseLeftButtonUp"
                    MouseMove="Grapich_MouseMove">

                <Canvas.RenderTransform>
                    <TransformGroup>
                        <ScaleTransform ScaleY="-1"/>
                        <TranslateTransform Y="{Binding ElementName=Grapich, Path=ActualHeight}"/>
                    </TransformGroup>
                </Canvas.RenderTransform>

                <ItemsControl ItemsSource="{Binding TransformedGridLines}">
                    <ItemsControl.ItemsPanel>
                        <ItemsPanelTemplate>
                            <Canvas/>
                        </ItemsPanelTemplate>
                    </ItemsControl.ItemsPanel>
                    <ItemsControl.ItemTemplate>
                        <DataTemplate>
                            <Line X1="{Binding StartPoint.X}" Y1="{Binding StartPoint.Y}"
                                  X2="{Binding EndPoint.X}" Y2="{Binding EndPoint.Y}"
                                  Stroke="LightGray" StrokeThickness="0.5"/>
                        </DataTemplate>
                    </ItemsControl.ItemTemplate>
                </ItemsControl>

                <ItemsControl ItemsSource="{Binding TransformedCurve}">
                    <ItemsControl.ItemsPanel>
                        <ItemsPanelTemplate>
                            <Canvas/>
                        </ItemsPanelTemplate>
                    </ItemsControl.ItemsPanel>
                    <ItemsControl.ItemTemplate>
                        <DataTemplate>
                            <Line X1="{Binding StartPoint.X}" Y1="{Binding StartPoint.Y}"
                                  X2="{Binding EndPoint.X}" Y2="{Binding EndPoint.Y}"
                                  Stroke="Black" StrokeThickness="2"/>
                        </DataTemplate>
                    </ItemsControl.ItemTemplate>
                </ItemsControl>

                <ItemsControl ItemsSource="{Binding TransformedControlPolygon}">
                    <ItemsControl.ItemsPanel>
                        <ItemsPanelTemplate>
                            <Canvas/>
                        </ItemsPanelTemplate>
                    </ItemsControl.ItemsPanel>
                    <ItemsControl.ItemTemplate>
                        <DataTemplate>
                            <Line X1="{Binding StartPoint.X}" Y1="{Binding StartPoint.Y}"
                                  X2="{Binding EndPoint.X}" Y2="{Binding EndPoint.Y}"
                                  Stroke="Gray" StrokeDashArray="2 2" StrokeThickness="1"/>
                        </DataTemplate>
                    </ItemsControl.ItemTemplate>
                </ItemsControl>

                <ItemsControl ItemsSource="{Binding ControlPointsMarkers}">
                    <ItemsControl.ItemsPanel>
                        <ItemsPanelTemplate>
                            <Canvas/>
                        </ItemsPanelTemplate>
                    </ItemsControl.ItemsPanel>

                    <ItemsControl.ItemContainerStyle>
                        <Style TargetType="ContentPresenter">
                            <Setter Property="Canvas.Left" Value="{Binding Center.X, Converter={StaticResource CenterConverter}, ConverterParameter=6}"/>
                            <Setter Property="Canvas.Top" Value="{Binding Center.Y, Converter={StaticResource CenterConverter}, ConverterParameter=6}"/>
                        </Style>
                    </ItemsControl.ItemContainerStyle>

                    <ItemsControl.ItemTemplate>
                        <DataTemplate>
                            <Ellipse Width="6" Height="6" Fill="Red" Stroke="Black"/>
                        </DataTemplate>
                    </ItemsControl.ItemTemplate>
                </ItemsControl>

                <Ellipse x:Name="RotationCenter"
                         Fill="Gold" Stroke="Black" Width="10" Height="10"
                         Canvas.Left="{Binding TransformedRotationCenter.X, Converter={StaticResource CenterConverter}, ConverterParameter=10}"
                         Canvas.Top="{Binding TransformedRotationCenter.Y, Converter={StaticResource CenterConverter}, ConverterParameter=10}"
                         MouseLeftButtonDown="RotationCenter_MouseLeftButtonDown"
                         MouseLeftButtonUp="RotationCenter_MouseLeftButtonUp"
                         MouseMove="RotationCenter_MouseMove"/>
            </Canvas>
        </Border>

        <ScrollViewer Grid.Column="1">
            <StackPanel Margin="5">
                <GroupBox Header="Лаб 3: Криві Фергюсона">
                    <StackPanel>
                        <CheckBox Content="Показати скелет" IsChecked="{Binding ShowPolygon}"/>
                        <Button Content="{Binding AnimationButtonText}" Command="{Binding ToggleAnimationCommand}" Margin="0,5"/>
                        <TextBlock Text="Перетягуйте червоні точки мишкою" FontStyle="Italic" TextWrapping="Wrap" Margin="0,5"/>
                    </StackPanel>
                </GroupBox>

                <GroupBox Header="Трансформації">
                    <StackPanel>
                        <TextBlock Text="Кут обертання:"/>
                        <Slider Minimum="0" Maximum="360" Value="{Binding Angle}" TickFrequency="1"/>
                        <TextBlock Text="{Binding Angle, StringFormat='{}{0:F0}°'}"/>

                        <TextBlock Text="Масштаб:" Margin="0,5,0,0"/>
                        <Slider Minimum="0.5" Maximum="3.0" Value="{Binding Scale}" TickFrequency="0.1"/>
                        <TextBlock Text="{Binding Scale, StringFormat='{}{0:F1}x'}"/>
                    </StackPanel>
                </GroupBox>

                <Button Content="Скинути" Command="{Binding ResetCommand }" Margin="0,10,0,0"/>
            </StackPanel>
        </ScrollViewer>
    </Grid>
</UserControl>
