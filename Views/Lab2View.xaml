<UserControl x:Class="GraphicModelling.Views.Lab2View"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:GraphicModelling.Views"
             xmlns:converters="clr-namespace:GraphicModelling.Converters" 
             xmlns:viewmodels="clr-namespace:GraphicModelling.ViewModels" d:DataContext="{d:DesignInstance Type=viewmodels:Lab2ViewModel}"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">
    <UserControl.Resources>
        <converters:CenterConverter x:Key="CenterConverter"/>
    </UserControl.Resources>
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="2*"/>
            <ColumnDefinition Width="1*"/>
        </Grid.ColumnDefinitions>

        <Border Grid.Column="0" BorderBrush="Gray" BorderThickness="1" Margin="10">
            <Canvas x:Name="Grapich" ClipToBounds="True" Background="White" SizeChanged="Grapich_SizeChanged">
                <Canvas.RenderTransform>
                    <TransformGroup>
                        <ScaleTransform ScaleY="-1"/>
                        <TranslateTransform Y="{Binding ElementName=Grapich, Path=ActualHeight}"/>
                    </TransformGroup>
                </Canvas.RenderTransform>

                <ItemsControl ItemsSource="{Binding TransformedGridLines}">
                    <ItemsControl.ItemsPanel>
                        <ItemsPanelTemplate>
                            <Canvas/>
                        </ItemsPanelTemplate>
                    </ItemsControl.ItemsPanel>
                    <ItemsControl.ItemTemplate>
                        <DataTemplate>
                            <Line X1="{Binding StartPoint.X}" Y1="{Binding StartPoint.Y}"
                                  X2="{Binding EndPoint.X}" Y2="{Binding EndPoint.Y}"
                                  Stroke="LightGray" StrokeThickness="0.5"/>
                        </DataTemplate>
                    </ItemsControl.ItemTemplate>
                </ItemsControl>

                <ItemsControl ItemsSource="{Binding TransformedTrochoid}">
                    <ItemsControl.ItemsPanel>
                        <ItemsPanelTemplate>
                            <Canvas/>
                        </ItemsPanelTemplate>
                    </ItemsControl.ItemsPanel>
                    <ItemsControl.ItemTemplate>
                        <DataTemplate>
                            <Line X1="{Binding StartPoint.X}" Y1="{Binding StartPoint.Y}"
                                  X2="{Binding EndPoint.X}" Y2="{Binding EndPoint.Y}"
                                  Stroke="Blue" StrokeThickness="2.5"/>
                        </DataTemplate>
                    </ItemsControl.ItemTemplate>
                </ItemsControl>

                <ItemsControl ItemsSource="{Binding TransformedTangentNormal}">
                    <ItemsControl.ItemsPanel>
                        <ItemsPanelTemplate>
                            <Canvas/>
                        </ItemsPanelTemplate>
                    </ItemsControl.ItemsPanel>
                    <ItemsControl.ItemTemplate>
                        <DataTemplate>
                            <Line X1="{Binding StartPoint.X}" Y1="{Binding StartPoint.Y}"
                                  X2="{Binding EndPoint.X}" Y2="{Binding EndPoint.Y}"
                                  Stroke="Red" StrokeThickness="1.5" Opacity="0.8"/>
                        </DataTemplate>
                    </ItemsControl.ItemTemplate>
                </ItemsControl>

                <Ellipse x:Name="RotationCenter"
                         Fill="Gold" Stroke="Black" StrokeThickness="1" Width="10" Height="10"
                         Canvas.Left="{Binding TransformedRotationCenter.X, Converter={StaticResource CenterConverter}, ConverterParameter=10}"
                         Canvas.Top="{Binding TransformedRotationCenter.Y, Converter={StaticResource CenterConverter}, ConverterParameter=10}"
                         MouseLeftButtonDown="RotationCenter_MouseLeftButtonDown"
                         MouseLeftButtonUp="RotationCenter_MouseLeftButtonUp"
                         MouseMove="RotationCenter_MouseMove"/>
            </Canvas>
        </Border>

        <ScrollViewer Grid.Column="1" VerticalScrollBarVisibility="Auto">
            <TabControl>
                <TabItem Header="Параметри кривої">
                    <StackPanel>
                        <GroupBox Header="Параметри Трохоїди">
                            <StackPanel>
                                <TextBlock Text="Радіус кола (r):"/>
                                <Slider Minimum="0.5" Maximum="10.0" Value="{Binding R, Mode=TwoWay}" TickFrequency="0.1"/>
                                <TextBlock Text="{Binding R, StringFormat='{}{0:F1} см'}"/>

                                <TextBlock Text="Відстань (h):" Margin="0,10,0,0"/>
                                <Slider Minimum="0.1" Maximum="20.0" Value="{Binding H, Mode=TwoWay}" TickFrequency="0.1"/>
                                <TextBlock Text="{Binding H, StringFormat='{}{0:F1} см'}"/>
                            </StackPanel>
                        </GroupBox>

                        <GroupBox Header="Анімація (зміна h)">
                            <Button Content="{Binding AnimationButtonText}" Command="{Binding ToggleAnimationCommand}" />
                        </GroupBox>

                        <GroupBox Header="Дотична та Нормаль (в точці t)">
                            <StackPanel>
                                <TextBlock Text="Параметр (t):"/>
                                <Slider Minimum="0.1" Maximum="18.8" Value="{Binding T, Mode=TwoWay}" TickFrequency="0.1"/>
                                <TextBlock Text="{Binding T, StringFormat='{}{0:F2} рад'}"/>
                            </StackPanel>
                        </GroupBox>

                        <GroupBox Header="Розрахунки">
                            <StackPanel TextBlock.FontSize="12">
                                <TextBlock Text="{Binding Area}" Margin="2" FontWeight="SemiBold"/>
                                <TextBlock Text="{Binding ArcLength}" Margin="2" FontWeight="SemiBold"/>
                                <TextBlock Text="{Binding CurvatureRadius}" Margin="2" FontWeight="SemiBold"/>
                                <TextBlock Text="{Binding InflectionPoints}" Margin="2" FontWeight="SemiBold"/>
                                <TextBlock Text="Асимптоти: Немає" Margin="2" FontWeight="SemiBold"/>
                            </StackPanel>
                        </GroupBox>

                    </StackPanel>
                </TabItem>

                <TabItem Header="Трансформації">
                    <StackPanel>
                        <GroupBox Header="Euclidean Transformation">
                            <StackPanel>
                                <TextBlock Text="Кут обертання:"/>
                                <Slider Minimum="0" Maximum="360" Value="{Binding Angle, Mode=TwoWay}" TickFrequency="1"/>
                                <TextBlock Text="{Binding Angle, StringFormat='{}{0:F0}°'}"/>

                                <TextBlock Text="Масштаб:" Margin="0,10,0,0"/>
                                <Slider Minimum="0.1" Maximum="5.0" Value="{Binding Scale, Mode=TwoWay}" TickFrequency="0.1"/>
                                <TextBlock Text="{Binding Scale, StringFormat='{}{0:F1}x'}"/>
                            </StackPanel>
                        </GroupBox>
                    </StackPanel>
                </TabItem>
            </TabControl>
        </ScrollViewer>
    </Grid>
</UserControl>
