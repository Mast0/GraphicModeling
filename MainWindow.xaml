<Window x:Class="GraphicModelling.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        mc:Ignorable="d"
        xmlns:local ="clr-namespace:GraphicModelling.ViewModels" 
        xmlns:local1="clr-namespace:GraphicModelling.Converters"
        Title="MainWindow" Height="650" Width="1000">
    <Window.Resources>
        <local1:CenterConverter x:Key="CenterConverter"/>
    </Window.Resources>
    <Window.DataContext>
        <local:MainViewModel/>
    </Window.DataContext>
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="2*"/>
            <ColumnDefinition Width="1*"/>
        </Grid.ColumnDefinitions>

        <Border Grid.Column="0" BorderBrush="Gray" BorderThickness="1" Margin="10">
            <Canvas x:Name="Grapich" ClipToBounds="True" Background="White">
                <Canvas.RenderTransform>
                    <TransformGroup>
                        <ScaleTransform ScaleY="-1"/>
                        <TranslateTransform Y="{Binding ElementName=Grapich, Path=ActualHeight}"/>
                    </TransformGroup>
                </Canvas.RenderTransform>
                <ItemsControl ItemsSource="{Binding TransformedGridLines}">
                    <ItemsControl.ItemsPanel>
                        <ItemsPanelTemplate>
                            <Canvas/>
                        </ItemsPanelTemplate>
                    </ItemsControl.ItemsPanel>
                    <ItemsControl.ItemTemplate>
                        <DataTemplate>
                            <Line X1="{Binding StartPoint.X}" Y1="{Binding StartPoint.Y}"
                                  X2="{Binding EndPoint.X}" Y2="{Binding EndPoint.Y}"
                                  Stroke="LightGray" StrokeThickness="0.5"/>
                        </DataTemplate>
                    </ItemsControl.ItemTemplate>
                </ItemsControl>

                <ItemsControl ItemsSource="{Binding TransformedSegments}">
                    <ItemsControl.ItemsPanel>
                        <ItemsPanelTemplate>
                            <Canvas/>
                        </ItemsPanelTemplate>
                    </ItemsControl.ItemsPanel>
                    <ItemsControl.ItemTemplate>
                        <DataTemplate>
                            <Line X1="{Binding StartPoint.X}" Y1="{Binding StartPoint.Y}"
                                  X2="{Binding EndPoint.X}" Y2="{Binding EndPoint.Y}"
                                  Stroke="Black" StrokeThickness="2.5"/>
                        </DataTemplate>
                    </ItemsControl.ItemTemplate>
                </ItemsControl>

                <Ellipse x:Name="RotationCenter"
                     Fill="Gold" Stroke="Black" StrokeThickness="1" Width="10" Height="10"
                     Canvas.Left="{Binding TransformedRotationCenter.X, Converter={StaticResource CenterConverter}, ConverterParameter=10}"
                     Canvas.Top="{Binding TransformedRotationCenter.Y, Converter={StaticResource CenterConverter}, ConverterParameter=10}"
                     MouseLeftButtonDown="RotationCenter_MouseLeftButtonDown"
                     MouseLeftButtonUp="RotationCenter_MouseLeftButtonUp"
                     MouseMove="RotationCenter_MouseMove"/>
            </Canvas>
        </Border>

        <ScrollViewer Grid.Column="2" VerticalScrollBarVisibility="Auto" Grid.ColumnSpan="2" Margin="2,0,0,0">
            <TabControl>
                <TabItem Header="Transformations">
                    <StackPanel>
                        <GroupBox Header="Euclidean Transformation">
                            <StackPanel>
                                <TextBlock Text="Кут обертання:"/>
                                <Slider Minimum="0" Maximum="360" Value="{Binding Angle, Mode=TwoWay}" TickFrequency="1"/>
                                <TextBlock Text="{Binding Angle, StringFormat='{}{0:F0}°'}"/>
                            </StackPanel>
                        </GroupBox>

                        <GroupBox Header="Transformation Type">
                            <StackPanel>
                                <CheckBox Content="Affine" IsChecked="{Binding IsAffine}"/>
                                <CheckBox Content="Projective" IsChecked="{Binding IsProjective}"/>
                            </StackPanel>
                        </GroupBox>

                        <GroupBox Header="Affine/Projective Parameters">
                            <Grid>
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition/>
                                    <ColumnDefinition/>
                                    <ColumnDefinition/>
                                </Grid.ColumnDefinitions>
                                <Grid.RowDefinitions>
                                    <RowDefinition/>
                                    <RowDefinition/>
                                    <RowDefinition/>
                                </Grid.RowDefinitions>

                                <TextBlock Grid.Row="0" Grid.Column="0" Text="Xx:" VerticalAlignment="Center" Margin="2,0"/>
                                <TextBox Grid.Row="0" Grid.Column="0" Text="{Binding M00}" Margin="25,0,0,0" IsEnabled="{Binding IsAffine}"/>

                                <TextBlock Grid.Row="0" Grid.Column="1" Text="Xy:" VerticalAlignment="Center" Margin="2,0"/>
                                <TextBox Grid.Row="0" Grid.Column="1" Text="{Binding M01}" Margin="25,0,0,0" IsEnabled="{Binding IsAffine}"/>

                                <TextBlock Grid.Row="0" Grid.Column="2" Text="Wx:" VerticalAlignment="Center" Margin="2,0"/>
                                <TextBox Grid.Row="0" Grid.Column="2" Text="{Binding M02}" Margin="25,0,0,0" IsEnabled="{Binding IsProjective}"/>

                                <TextBlock Grid.Row="1" Grid.Column="0" Text="Yx:" VerticalAlignment="Center" Margin="2,0"/>
                                <TextBox Grid.Row="1" Grid.Column="0" Text="{Binding M10}" Margin="25,0,0,0" IsEnabled="{Binding IsAffine}"/>

                                <TextBlock Grid.Row="1" Grid.Column="1" Text="Yy:" VerticalAlignment="Center" Margin="2,0"/>
                                <TextBox Grid.Row="1" Grid.Column="1" Text="{Binding M11}" Margin="25,0,0,0" IsEnabled="{Binding IsAffine}"/>

                                <TextBlock Grid.Row="1" Grid.Column="2" Text="Wy:" VerticalAlignment="Center" Margin="2,0"/>
                                <TextBox Grid.Row="1" Grid.Column="2" Text="{Binding M12}" Margin="25,0,0,0" IsEnabled="{Binding IsProjective}"/>

                                <TextBlock Grid.Row="2" Grid.Column="0" Text="Dx:" VerticalAlignment="Center" Margin="2,0"/>
                                <TextBox Grid.Row="2" Grid.Column="0" Text="{Binding M20}" Margin="25,0,0,0" IsEnabled="{Binding IsAffine}"/>

                                <TextBlock Grid.Row="2" Grid.Column="1" Text="Dy:" VerticalAlignment="Center" Margin="2,0"/>
                                <TextBox Grid.Row="2" Grid.Column="1" Text="{Binding M21}" Margin="25,0,0,0" IsEnabled="{Binding IsAffine}"/>

                                <TextBlock Grid.Row="2" Grid.Column="2" Text="W0:" VerticalAlignment="Center" Margin="2,0"/>
                                <TextBox Grid.Row="2" Grid.Column="2" Text="{Binding M22}" Margin="25,0,0,0" IsEnabled="{Binding IsProjective}"/>
                            </Grid>
                        </GroupBox>

                        <Button Content="Скинути трансформації" Command="{Binding ResetTransformCommand}" Margin="0,10,0,0"/>
                    </StackPanel>
                </TabItem>

                <TabItem Header="Model Parameters">
                    <StackPanel>
                        <GroupBox Header="Model Parameters" Margin="0,10,0,0">
                            <StackPanel>
                                <TextBlock Text="Segments:" FontWeight="Bold" Margin="0,0,0,5" />
                                <ItemsControl ItemsSource="{Binding OriginalSegments}">
                                    <ItemsControl.ItemTemplate>
                                        <DataTemplate>
                                            <Border BorderBrush="LightGray" BorderThickness="0,0,0,1" Padding="0,5">
                                                <StackPanel>
                                                    <Grid>
                                                        <Grid.ColumnDefinitions>
                                                            <ColumnDefinition Width="Auto"/>
                                                            <ColumnDefinition Width="*"/>
                                                        </Grid.ColumnDefinitions>
                                                        <TextBlock Grid.Column="0" Text="Length: " VerticalAlignment="Center"/>
                                                        <TextBox Grid.Column="1" Text="{Binding Length, UpdateSourceTrigger=PropertyChanged}" Margin="5,0"/>
                                                    </Grid>

                                                    <Grid>
                                                        <Grid.ColumnDefinitions>
                                                            <ColumnDefinition Width="Auto"/>
                                                            <ColumnDefinition Width="*"/>
                                                        </Grid.ColumnDefinitions>
                                                        <TextBlock Grid.Column="0" Text="Radius: " VerticalAlignment="Center"/>
                                                        <TextBox Grid.Column="1" Text="{Binding Radius, UpdateSourceTrigger=PropertyChanged}" Margin="5,0"/>
                                                    </Grid>
                                                </StackPanel>
                                            </Border>
                                        </DataTemplate>
                                    </ItemsControl.ItemTemplate>
                                </ItemsControl>

                                <TextBlock Text="Circles: " FontWeight="Bold" Margin="0,10,0,5"/>
                                <ItemsControl ItemsSource="{Binding OriginalCircles}">
                                    <ItemsControl.ItemTemplate>
                                        <DataTemplate>
                                            <Grid Margin="0,2">
                                                <Grid.ColumnDefinitions>
                                                    <ColumnDefinition Width="Auto"/>
                                                    <ColumnDefinition Width="*"/>
                                                </Grid.ColumnDefinitions>
                                                <TextBlock Grid.Column="0" Text="Radius:" VerticalAlignment="Center"/>
                                                <TextBox Grid.Column="1" Text="{Binding Radius, UpdateSourceTrigger=PropertyChanged}" Margin="5,0"/>
                                            </Grid>
                                        </DataTemplate>
                                    </ItemsControl.ItemTemplate>
                                </ItemsControl>
                            </StackPanel>
                        </GroupBox>
                    </StackPanel>
                </TabItem>
            </TabControl>
        </ScrollViewer>
    </Grid>
</Window>